<div class="container">
  <%= flash[:danger] %>
  <h1>Log In</h1>
  <%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>

  <p>New to Tasters? <%= link_to "Sign up now!", signup_path %></p>
</div>
